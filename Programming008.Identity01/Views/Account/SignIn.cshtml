@{
    Layout = null;
}

@model SignInModel

<!DOCTYPE html>
<html>
<head>
    <title>Login Page</title>
    <link rel="stylesheet" type="text/css" href="~/css/signin.css">
</head>
<body>
    <div class="container">
        <form class="login-form" asp-controller="Account" asp-action="SignIn" asp-route-returnUrl="@ViewBag.ReturnUrl" method="post">
            <h2>Login</h2>
            <div class="form-group">
                <label for="username">Username:</label>
                <input type="text" id="username" asp-for="Username"  class="input-field">
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" asp-for="Password" class="input-field">
            </div>
            <div class="form-group">
                <input type="submit" value="Log in" class="submit-button">
            </div>
@*            <div class="form-group">
                <a href="forgot-password" class="forgot-password">Forgot Password?</a>
            </div>*@

            <div asp-validation-summary="All" class="text-danger"></div>
        </form>
    </div>
</body>
</html>
